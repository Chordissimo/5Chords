import SwiftUI

struct LiveWaveform: View {
    @ObservedObject songsList: SongsList

    var body: some View {
        VStack {
            ScrollView {
                LazyHStack(alignment: .trailing, spacing: 3) {
                    RoundedRectangle(cornerRadius: 5, style: .continuous)
                        .foregroundColor(.yellow)
                        .frame(width: 3, height: songsList.decibels.last)
                }
            }
        }
    }
}